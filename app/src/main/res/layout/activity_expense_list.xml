<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="7pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7pt">
            <TextView
                android:id="@+id/toHomeBreadcrumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="8pt"
                android:padding="2pt"
                android:textColor="@color/colorSecundary"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:onClick="onClickBreadcrumb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" > "
                android:textSize="8pt"
                android:padding="2pt"
                android:textColor="@color/colorSecundary"
                android:clickable="true"
                android:onClick="onClickBreadcrumb"/>

            <TextView
                android:id="@+id/toExpenseList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minhas viagens"
                android:textSize="8pt"
                android:padding="2pt"
                android:textColor="@color/colorSecundary"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:onClick="onClickBreadcrumb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" > Gastos"
                android:textSize="8pt"
                android:textColor="@color/colorSecundary"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecundary">

            <ListView
                android:id="@+id/listaGastos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </ListView>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>